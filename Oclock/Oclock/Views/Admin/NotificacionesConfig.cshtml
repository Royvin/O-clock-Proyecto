                        </div>
                    </div>
                </div>

                <!-- Acciones -->
                <div class="action-section">
                    <div class="section-header">
                        <div class="section-icon">⚙️</div>
                        <div class="section-title">
                            <h2>Acciones</h2>
                            <p>Guarde sus preferencias o envíe una notificación de prueba</p>
                        </div>
                    </div>

                    <div class="btn-group">
                        <button class="btn btn-primary" onclick="savePreferences()">
                            💾 Guardar Cambios
                        </button>
                        <button class="btn btn-outline" onclick="sendTestNotification()">
                            📧 Enviar Prueba
                        </button>
                        <button class="btn btn-secondary" onclick="resetDefaults()">
                            🔄 Restaurar Predeterminados
                        </button>
                    </div>

                    <div class="alert alert-success" id="successAlert">
                        ✅ Preferencias guardadas exitosamente
                    </div>

                    <div class="alert alert-info" id="testAlert">
                        📤 Notificación de prueba enviada a su correo
                    </div>

                    <div class="alert alert-warning" id="resetAlert">
                        🔄 Configuración restaurada a valores predeterminados
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        let selectedFrequency = 'daily';

        function toggleSubmenu(element) {
             const submenu = element.querySelector('.submenu');
             const header = element.querySelector('.menu-expandable-header');

             // Toggle expanded class
             element.classList.toggle('expanded');

             // Toggle submenu visibility
             submenu.classList.toggle('show');

             // Toggle header active state
             if (element.classList.contains('expanded')) {
                 header.classList.add('active');
             } else {
                 header.classList.remove('active');
             }
         }

        function selectFrequency(element, frequency) {
            document.querySelectorAll('.frequency-card').forEach(card => {
                card.classList.remove('selected');
            });
            element.classList.add('selected');
            selectedFrequency = frequency;
        }

        function updateStats() {
            const emailEnabled = document.getElementById('emailNotif').checked;
            const internalEnabled = document.getElementById('internalNotif').checked;
            const alertEnabled = document.getElementById('alertNotif').checked;

            document.getElementById('emailCount').textContent = emailEnabled ? Math.floor(Math.random() * 20) : 0;
            document.getElementById('messageCount').textContent = internalEnabled ? Math.floor(Math.random() * 15) : 0;
            document.getElementById('alertCount').textContent = alertEnabled ? Math.floor(Math.random() * 5) : 0;
        }

        function savePreferences() {
            hideAllAlerts();

            // Simular guardado
            setTimeout(() => {
                showAlert('successAlert');
            }, 300);
        }

        function sendTestNotification() {
            hideAllAlerts();

            // Simular envío
            setTimeout(() => {
                showAlert('testAlert');
            }, 300);
        }

        function resetDefaults() {
            hideAllAlerts();

            // Restaurar valores predeterminados
            document.getElementById('emailNotif').checked = false;
            document.getElementById('internalNotif').checked = true;
            document.getElementById('alertNotif').checked = true;
            document.getElementById('pushNotif').checked = false;

            // Seleccionar frecuencia diaria
            document.querySelectorAll('.frequency-card').forEach(card => {
                card.classList.remove('selected');
            });
            document.querySelectorAll('.frequency-card')[1].classList.add('selected');
            selectedFrequency = 'daily';

            updateStats();

            setTimeout(() => {
                showAlert('resetAlert');
            }, 300);
        }

        function showAlert(alertId) {
            document.getElementById(alertId).classList.add('show');
            setTimeout(() => {
                document.getElementById(alertId).classList.remove('show');
            }, 4000);
        }

        function hideAllAlerts() {
            document.querySelectorAll('.alert').forEach(alert => {
                alert.classList.remove('show');
            });
        }

        // Inicializar estadísticas
        updateStats();
    </script>
</body>
</html>