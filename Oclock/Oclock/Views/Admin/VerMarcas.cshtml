                </div>


                <div class="menu-item">
                    <a href="/Admin/Reportes" class="menu-link">
                        <div class="icon">📄</div>
                        Reportes
                    </a>
                </div>

            </div>

            <!-- Main Content -->
            <div class="content">
                <!-- Encabezado -->
                <div class="content-header">
                    <h1>Consulta de Marcas</h1>
                    <p>Visualización y exportación de marcas de empleados</p>
                </div>

