                        <button style="padding: 12px 25px; border-radius: 10px; background: #667eea; color: white; border: none; cursor: pointer; font-weight: bold;">
                            Buscar
                        </button>

                        <button style="padding: 12px 25px; border-radius: 10px; background: #edf2f7; color: #333; border: none; cursor: pointer; font-weight: bold;">
                            Limpiar Filtros
                        </button>
                    </div>
                </div>

                <!-- RESULTADOS DE MARCAS -->
                <div class="recent-activity">
                    <h2>Marcas Registradas</h2>

                    <div style="overflow-x:auto;">
                        <table style="width:100%; border-collapse: collapse;">
                            <thead>
                                <tr style="background:#f1f5f9; text-align:left;">
                                    <th style="padding:15px;">Empleado</th>
                                    <th>Fecha</th>
                                    <th>Tipo</th>
                                    <th>Hora</th>
                                    <th>Estado</th>
                                    <th>Comentario</th>
                                </tr>
                            </thead>
                            <tbody>

                                <tr>
                                    <td style="padding:15px;">Juan Pérez</td>
                                    <td>10/11/2025</td>
                                    <td>Entrada</td>
                                    <td>07:58</td>
                                    <td><span class="badge badge-success">Válida</span></td>
                                    <td>Llegó puntual</td>
                                </tr>

                                <tr>
                                    <td style="padding:15px;">Carolina Méndez</td>
                                    <td>10/11/2025</td>
                                    <td>Salida</td>
                                    <td>17:32</td>
                                    <td><span class="badge badge-warning" style="background:#fefcbf; color:#744210;">Fuera de horario</span></td>
                                    <td>Salida tardía autorizada</td>
                                </tr>

                                <tr>
                                    <td style="padding:15px;">Samuel Vargas</td>
                                    <td>09/11/2025</td>
                                    <td>Entrada</td>
                                    <td>08:25</td>
                                    <td><span class="badge badge-danger" style="background:#fed7d7; color:#9b2c2c;">Inconsistente</span></td>
                                    <td>Marca duplicada</td>
                                </tr>

                            </tbody>
