    <script>
        let reglas = [];
        let editingIndex = -1;

        function toggleSubmenu(element) {
             const submenu = element.querySelector('.submenu');
             const header = element.querySelector('.menu-expandable-header');

             // Toggle expanded class
             element.classList.toggle('expanded');

             // Toggle submenu visibility
             submenu.classList.toggle('show');

             // Toggle header active state
             if (element.classList.contains('expanded')) {
                 header.classList.add('active');
             } else {
                 header.classList.remove('active');
             }
         }

        function validarFormulario(nombre, horasMin, horasMax, valor) {
            if (!nombre.trim()) {
                return "El nombre del bono es requerido";
            }
            if (horasMin === '' || horasMin < 0) {
                return "Las horas mínimas deben ser un valor positivo";
            }
            if (horasMax === '' || horasMax < 0) {
                return "Las horas máximas deben ser un valor positivo";
            }
            if (parseFloat(horasMin) >= parseFloat(horasMax)) {
                return "Las horas máximas deben ser mayores a las mínimas";
            }
            if (valor === '' || valor <= 0) {
                return "El valor debe ser mayor a 0";
            }
            return null;
        }

        function guardarRegla() {
            const nombre = document.getElementById('nombre').value;
            const horasMin = document.getElementById('horasMin').value;
            const horasMax = document.getElementById('horasMax').value;
            const tipoBono = document.getElementById('tipoBono').value;
            const valor = document.getElementById('valor').value;

            const error = validarFormulario(nombre, horasMin, horasMax, valor);

            if (error) {
                mostrarAlerta('alertError', error);
                return;
            }

            const regla = {
                nombre,
                horasMin: parseFloat(horasMin),
                horasMax: parseFloat(horasMax),
                tipoBono,
                valor: parseFloat(valor)
            };

            reglas.push(regla);
            actualizarTabla();
            limpiarFormulario();
            mostrarAlerta('alertSuccess');

            setTimeout(() => {
                ocultarAlerta('alertSuccess');
            }, 3000);
        }

        function limpiarFormulario() {
            document.getElementById('nombre').value = '';
            document.getElementById('horasMin').value = '';
            document.getElementById('horasMax').value = '';
            document.getElementById('tipoBono').value = 'monto';
            document.getElementById('valor').value = '';
            ocultarAlerta('alertError');
        }

        function mostrarAlerta(alertId, mensaje = null) {
            const alert = document.getElementById(alertId);
            if (mensaje && alertId === 'alertError') {
                document.getElementById('errorMessage').textContent = mensaje;
            }
            alert.classList.add('show');
        }

        function ocultarAlerta(alertId) {
            document.getElementById(alertId).classList.remove('show');
        }

        function actualizarTabla() {
            const container = document.getElementById('tableContainer');
            document.getElementById('rulesCount').textContent =
                `${reglas.length} ${reglas.length === 1 ? 'regla' : 'reglas'}`;

            if (reglas.length === 0) {
                container.innerHTML = `
                    <div class="empty-state">
                        <div class="empty-state-icon">📋</div>
                        <h3>No hay reglas configuradas</h3>
                        <p>Comience agregando una nueva regla de bono</p>
                    </div>
                `;
                return;
            }

            let html = `
                <table class="rules-table">
                    <thead>
                        <tr>
                            <th>Nombre del Bono</th>
                            <th>Rango de Horas</th>
                            <th>Tipo</th>
                            <th>Valor</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
            `;

            reglas.forEach((regla, index) => {
                const simbolo = regla.tipoBono === 'porcentaje' ? '%' : '$';
                html += `
                    <tr>
                        <td class="rule-name">${regla.nombre}</td>
                        <td>
                            <div class="rule-range">
                                <span>${regla.horasMin}h</span>
                                <span style="color: #cbd5e0;">→</span>
                                <span>${regla.horasMax}h</span>
                            </div>
                        </td>
                        <td>${regla.tipoBono === 'monto' ? 'Monto Fijo' : 'Porcentaje'}</td>
                        <td class="rule-amount">${simbolo}${regla.valor.toFixed(2)}</td>
                        <td>
                            <div class="rule-actions">
                                <button class="btn-icon btn-edit" onclick="editarRegla(${index})" title="Editar">
                                    ✏️
                                </button>
                                <button class="btn-icon btn-delete" onclick="eliminarRegla(${index})" title="Eliminar">
                                    🗑️
                                </button>
                            </div>
                        </td>
                    </tr>
                `;
            });

            html += `
                    </tbody>
                </table>
            `;

            container.innerHTML = html;
        }

        function editarRegla(index) {
            editingIndex = index;
            const regla = reglas[index];

            document.getElementById('editNombre').value = regla.nombre;
            document.getElementById('editHorasMin').value = regla.horasMin;
            document.getElementById('editHorasMax').value = regla.horasMax;
            document.getElementById('editTipoBono').value = regla.tipoBono;
            document.getElementById('editValor').value = regla.valor;

            document.getElementById('editModal').classList.add('show');
            ocultarAlerta('editAlertError');
        }

        function actualizarRegla() {
            const nombre = document.getElementById('editNombre').value;
            const horasMin = document.getElementById('editHorasMin').value;
            const horasMax = document.getElementById('editHorasMax').value;
            const tipoBono = document.getElementById('editTipoBono').value;
            const valor = document.getElementById('editValor').value;

            const error = validarFormulario(nombre, horasMin, horasMax, valor);

            if (error) {
                document.getElementById('editErrorMessage').textContent = error;
                mostrarAlerta('editAlertError');
                return;
            }

            reglas[editingIndex] = {
                nombre,
                horasMin: parseFloat(horasMin),
                horasMax: parseFloat(horasMax),
                tipoBono,
                valor: parseFloat(valor)
            };

            actualizarTabla();
            cerrarModal();
        }

        function cerrarModal() {
            document.getElementById('editModal').classList.remove('show');
            editingIndex = -1;
        }

        function eliminarRegla(index) {
            if (confirm('¿Está seguro de eliminar esta regla?')) {
                reglas.splice(index, 1);
                actualizarTabla();
            }
        }

        // Inicializar tabla vacía
        actualizarTabla();

        // Cerrar modal al hacer clic fuera
        document.getElementById('editModal').addEventListener('click', function(e) {
            if (e.target === this) {
                cerrarModal();
            }
        });
    </script>
</body>
