    <script>
       

          const bonuses = [
        { id: 1, employee: 'Ana López', period: '2025-10', amount: 50000, reason: 'Puntualidad excelente', status: 'Activo' },
        { id: 2, employee: 'Carlos Ramírez', period: '2025-09', amount: 40000, reason: 'Asistencia perfecta', status: 'Activo' }
    ];

    document.addEventListener('DOMContentLoaded', renderBonuses);

    function renderBonuses() {
        const tbody = document.getElementById('bonusTable');
        tbody.innerHTML = bonuses.map(b => `
            <tr>
                <td>${b.employee}</td>
                <td>${b.period}</td>
                <td>₡ ${b.amount.toLocaleString()}</td>
                <td>${b.reason}</td>
                <td><span class="badge badge-success">${b.status}</span></td>
                <td>
                    <button class="btn btn-info" onclick="editBonus(${b.id})">Editar</button>
                    <button class="btn btn-danger" onclick="deleteBonus(${b.id})">Eliminar</button>
                </td>
            </tr>
        `).join('');
    }

    function registerBonus() {
        const warning = document.getElementById('duplicateWarning');
        warning.style.display = 'block';
    }

    function editBonus(id) {
        alert('Edición bloqueada: el bono ya fue procesado');
    }

    function deleteBonus(id) {
        if (confirm('¿Está seguro que desea eliminar este bono?')) {
            alert('Bono eliminado correctamente');
        }
    }


          function toggleSubmenu(element) {
                const submenu = element.querySelector('.submenu');
                const header = element.querySelector('.menu-expandable-header');

                // Toggle expanded class
                element.classList.toggle('expanded');

                // Toggle submenu visibility
                submenu.classList.toggle('show');

                // Toggle header active state
                if (element.classList.contains('expanded')) {
                    header.classList.add('active');
                } else {
                    header.classList.remove('active');
                }
            }

       
        }
