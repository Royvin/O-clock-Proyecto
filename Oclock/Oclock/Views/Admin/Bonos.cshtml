    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        /* Sidebar + Content Layout */
        .main-layout {
            display: flex;
            min-height: 600px;
        }

        /* SIDEBAR */
        .sidebar {
            width: 280px;
            background: linear-gradient(180deg, #f8f9fa 0%, #ffffff 100%);
            padding: 30px 20px;
            border-right: 1px solid #e0e0e0;
            box-shadow: 2px 0 10px rgba(0,0,0,0.03);
        }

        .menu-item {
            padding: 0;
            margin: 4px 0;
            border-radius: 10px;
            transition: all 0.3s;
            position: relative;
        }

        .menu-link {
            display: flex;
            align-items: center;
            gap: 12px;
            padding: 15px 20px;
            color: #4a5568;
            text-decoration: none;
            font-weight: 500;
            border-radius: 10px;
            transition: all 0.3s;
            position: relative;
        }

        .menu-link:hover {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            transform: translateX(5px);
        }

        .menu-link.active {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            box-shadow: 0 4px 12px rgba(102, 126, 234, 0.3);
        }

        .menu-link.active::before {
            content: '';
            position: absolute;
            left: 0;
            top: 50%;
            transform: translateY(-50%);
            width: 4px;
            height: 24px;
            background: white;
            border-radius: 0 4px 4px 0;
        }

        .icon {
            width: 24px;
            height: 24px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 18px;
        }

        /* Menu Expandible */
        .menu-expandable {
            cursor: pointer;
        }

        .menu-expandable-header {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 15px 20px;
            color: #4a5568;
            font-weight: 500;
            border-radius: 10px;
            transition: all 0.3s;
        }

        .menu-expandable-header:hover {
            background: #f0f0f0;
            color: #667eea;
        }

        .menu-expandable-header.active {
            background: linear-gradient(135deg, rgba(102, 126, 234, 0.1) 0%, rgba(118, 75, 162, 0.1) 100%);
            color: #667eea;
            font-weight: 600;
        }

        .menu-expandable-left {
            display: flex;
            align-items: center;
            gap: 12px;
        }

        .menu-arrow {
            font-size: 12px;
            transition: transform 0.3s;
        }

        .menu-expandable.expanded .menu-arrow {
            transform: rotate(90deg);
        }

        .submenu {
            max-height: 0;
            overflow: hidden;
            transition: max-height 0.3s ease-out;
            margin-left: 20px;
            margin-top: 4px;
        }

        .submenu.show {
            max-height: 500px;
            transition: max-height 0.5s ease-in;
        }

        .submenu-item {
            margin: 4px 0;
        }

        .submenu-link {
            display: flex;
            align-items: center;
            gap: 10px;
            padding: 12px 16px;
            padding-left: 40px;
            color: #718096;
            text-decoration: none;
            font-weight: 500;
            font-size: 14px;
            border-radius: 8px;
            transition: all 0.3s;
            position: relative;
        }

        .submenu-link::before {
            content: '';
            position: absolute;
            left: 20px;
            top: 50%;
            transform: translateY(-50%);
            width: 6px;
            height: 6px;
            background: #cbd5e0;
            border-radius: 50%;
            transition: all 0.3s;
        }

        .submenu-link:hover {
            background: #f7fafc;
            color: #667eea;
            transform: translateX(3px);
        }

        .submenu-link:hover::before {
            background: #667eea;
            transform: translateY(-50%) scale(1.3);
        }

        .submenu-link.active {
            background: linear-gradient(135deg, rgba(102, 126, 234, 0.15) 0%, rgba(118, 75, 162, 0.15) 100%);
            color: #667eea;
            font-weight: 600;
        }

        .submenu-link.active::before {
            background: #667eea;
            width: 8px;
            height: 8px;
        }

        /* Main Content - MEJORADO */
        .content {
            flex: 1;
            padding: 40px;
            background: #f5f7fa;
        }

        .content-header {
            margin-bottom: 30px;
            display: flex;
            justify-content: space-between;
            align-items: center;
