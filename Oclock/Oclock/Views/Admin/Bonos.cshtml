        .detail-row {
            display: flex;
            padding: 15px 0;
            border-bottom: 1px solid #f0f0f0;
        }

            .detail-row:last-child {
                border-bottom: none;
            }

        .detail-label {
            font-weight: 700;
            color: #4a5568;
            width: 150px;
            flex-shrink: 0;
        }

        .detail-value {
