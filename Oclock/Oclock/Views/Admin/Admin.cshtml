                        </div>
                    </div>
                </div>

               
                <div id="allTab" class="tab-content">
                    <div class="requests-section">
                        <div class="section-header">
                            <h2>📄 Todas las Solicitudes</h2>
                        </div>

                        <div class="table-container">
                            <table class="data-table">
                                <thead>
                                    <tr>
                                        <th>Colaborador</th>
                                        <th>Tipo</th>
                                        <th>Fecha</th>
                                        <th>Estado</th>
                                        <th>Acciones</th>
                                    </tr>
                                </thead>
                                <tbody id="allRequestsTable">
                                   
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

               
                <div id="historyTab" class="tab-content">
                    <div class="requests-section">
                        <div class="section-header">
                            <h2>📚 Historial de Solicitudes</h2>
                        </div>

                        <div class="table-container">
                            <table class="data-table">
                                <thead>
                                    <tr>
                                        <th>Colaborador</th>
                                        <th>Tipo</th>
                                        <th>Fecha</th>
                                        <th>Estado</th>
                                        <th>Observaciones</th>
                                        <th>Acciones</th>
                                    </tr>
                                </thead>
                                <tbody id="historyTable">
                                   
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

               
                <div class="filter-section">
                    <h2>📊 Generar Reporte</h2>
                    <p style="color: #718096; margin-bottom: 20px; font-size: 14px;">
                        Genere y descargue reportes detallados de las solicitudes
                    </p>
                    <div class="btn-group">
                        <button class="btn btn-primary" onclick="generateReport()">
                            📊 Generar Reporte
                        </button>
                        <button class="btn btn-secondary" onclick="downloadReport()">
                            💾 Descargar Reporte (CSV)
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

  

    <script>



        function toggleSubmenu(element) {
            const submenu = element.querySelector('.submenu');
            const header = element.querySelector('.menu-expandable-header');

            // Toggle expanded class
            element.classList.toggle('expanded');

            // Toggle submenu visibility
            submenu.classList.toggle('show');

            // Toggle header active state
            if (element.classList.contains('expanded')) {
                header.classList.add('active');
            } else {
                header.classList.remove('active');
            }
        }
   
        const requests = [
            { id: 1, employee: 'Ana López', type: 'Vacaciones', startDate: '2025-11-20', endDate: '2025-11-25', status: 'pending', reason: 'Vacaciones familiares', observations: '' },
            { id: 2, employee: 'Carlos Ramírez', type: 'Permiso', startDate: '2025-11-17', endDate: '2025-11-17', status: 'pending', reason: 'Cita médica', observations: '' },
            { id: 3, employee: 'María González', type: 'Vacaciones', startDate: '2025-11-10', endDate: '2025-11-15', status: 'approved', reason: 'Viaje personal', observations: 'Autorizado sin inconvenientes' },
            { id: 4, employee: 'Pedro Martínez', type: 'Permiso', startDate: '2025-10-15', endDate: '2025-10-15', status: 'rejected', reason: 'Asuntos personales', observations: 'No cumple requisitos' },
            { id: 5, employee: 'Ana López', type: 'Permiso', startDate: '2025-11-22', endDate: '2025-11-22', status: 'pending', reason: 'Trámite bancario', observations: '' },
            { id: 6, employee: 'Carlos Ramírez', type: 'Vacaciones', startDate: '2025-09-01', endDate: '2025-09-10', status: 'approved', reason: 'Descanso anual', observations: 'Aprobado' }
        ];

        document.addEventListener("DOMContentLoaded", () => {
            renderPendingRequests();
            renderAllRequests();
            renderHistory();
            updateCounters();
        });

    
        function switchTab(tabName, element) {
            document.querySelectorAll('.tab').forEach(tab => tab.classList.remove('active'));
            element.classList.add('active');

            document.querySelectorAll('.tab-content').forEach(content => content.classList.remove('active'));
            document.getElementById(tabName + 'Tab').classList.add('active');
        }

       
        function renderPendingRequests() {
            const container = document.getElementById('pendingRequests');
            const pending = requests.filter(r => r.status === 'pending');

            if (pending.length === 0) {
                container.innerHTML = `
                    <div class="empty-state">
                        <div class="empty-state-icon">📭</div>
                        <h3>No hay solicitudes pendientes</h3>
                        <p>Todas las solicitudes han sido procesadas</p>
                    </div>`;
                return;
            }

            container.innerHTML = pending.map(req => `
                <div class="request-card">
                    <div class="request-icon" style="background:#bee3f8;color:#2c5282;">
                        ${req.type === 'Vacaciones' ? '🏖️' : '📝'}
                    </div>
                    <div class="request-info">
                        <div class="request-title">${req.type} - ${req.employee}</div>
                        <div class="request-details">
                            <div class="request-detail-item">📅 <strong>Inicio:</strong> ${formatDate(req.startDate)}</div>
                            <div class="request-detail-item">📅 <strong>Fin:</strong> ${formatDate(req.endDate)}</div>
                        </div>
                    </div>
                    <div class="request-actions">
                        <button class="btn btn-success" onclick="approveRequest(${req.id})">Aprobar</button>
                        <button class="btn btn-danger" onclick="rejectRequest(${req.id})">Rechazar</button>
                        <button class="btn btn-info" onclick="openModal(${req.id})">Ver</button>
                    </div>
                </div>
            `).join("");
        }

        function renderAllRequests() {
            const tbody = document.getElementById("allRequestsTable");

            tbody.innerHTML = requests.map(req => `
                <tr>
                    <td>${req.employee}</td>
                    <td>${req.type}</td>
                    <td>${formatDate(req.startDate)}</td>
                    <td>${statusBadge(req.status)}</td>
                    <td>
                        <button class="btn btn-info" onclick="openModal(${req.id})">Ver</button>
                    </td>
                </tr>
            `).join("");
        }

        function renderHistory() {
            const tbody = document.getElementById("historyTable");
            const history = requests.filter(r => r.status !== 'pending');

            tbody.innerHTML = history.map(req => `
                <tr>
                    <td>${req.employee}</td>
                    <td>${req.type}</td>
                    <td>${formatDate(req.startDate)}</td>
                    <td>${statusBadge(req.status)}</td>
                    <td>${req.observations || '-'}</td>
                    <td>
                        <button class="btn btn-info" onclick="openModal(${req.id})">Ver</button>
                    </td>
                </tr>
            `).join("");
        }

        function approveRequest(id) {
            const req = requests.find(r => r.id === id);
            req.status = "approved";
            req.observations = "Aprobado por administrador";
            refresh();
        }

        function rejectRequest(id) {
            const req = requests.find(r => r.id === id);
            req.status = "rejected";
            req.observations = "Rechazado por administrador";
            refresh();
        }

        function refresh() {
            renderPendingRequests();
            renderAllRequests();
            renderHistory();
            updateCounters();
        }

   
        function openModal(id) {
            const req = requests.find(r => r.id === id);
            const modal = document.getElementById("requestModal");

            document.getElementById("modalContent").innerHTML = `
                <div class="detail-row"><div class="detail-label">Empleado</div><div class="detail-value">${req.employee}</div></div>
                <div class="detail-row"><div class="detail-label">Tipo</div><div class="detail-value">${req.type}</div></div>
                <div class="detail-row"><div class="detail-label">Inicio</div><div class="detail-value">${formatDate(req.startDate)}</div></div>
                <div class="detail-row"><div class="detail-label">Fin</div><div class="detail-value">${formatDate(req.endDate)}</div></div>
                <div class="detail-row"><div class="detail-label">Motivo</div><div class="detail-value">${req.reason}</div></div>
                <div class="detail-row"><div class="detail-label">Estado</div><div class="detail-value">${statusText(req.status)}</div></div>
            `;

            modal.classList.add("show");
        }

        function closeModal() {
            document.getElementById("requestModal").classList.remove("show");
        }

     
        function formatDate(date) {
            return new Date(date).toLocaleDateString("es-CR");
        }

        function statusBadge(status) {
            const map = {
                pending: '<span class="badge badge-warning">Pendiente</span>',
                approved: '<span class="badge badge-success">Aprobada</span>',
                rejected: '<span class="badge badge-danger">Rechazada</span>'
            };
            return map[status];
        }

        function statusText(status) {
            return status === "approved" ? "Aprobada" :
                   status === "rejected" ? "Rechazada" : "Pendiente";
        }

        function updateCounters() {
            document.getElementById("pendingCount").textContent = requests.filter(r => r.status === "pending").length;
            document.getElementById("approvedCount").textContent = requests.filter(r => r.status === "approved").length;
            document.getElementById("rejectedCount").textContent = requests.filter(r => r.status === "rejected").length;
            document.getElementById("totalCount").textContent = requests.length;
        }

       
    </script>

</body>
</html>
