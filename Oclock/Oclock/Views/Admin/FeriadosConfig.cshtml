        // Función para formatear fecha
        function formatDate(dateStr) {
            const date = new Date(dateStr + 'T00:00:00');
            const months = ['Ene', 'Feb', 'Mar', 'Abr', 'May', 'Jun', 'Jul', 'Ago', 'Sep', 'Oct', 'Nov', 'Dic'];
            return `${date.getDate()} ${months[date.getMonth()]} ${date.getFullYear()}`;
        }

        // Función para obtener clase de badge según tipo
        function getBadgeClass(type) {
            const classes = {
                'nacional': 'badge-nacional',
                'empresa': 'badge-empresa',
                'regional': 'badge-regional'
            };
            return classes[type] || 'badge-nacional';
        }

        // Función para renderizar la lista de feriados
        function renderHolidays() {
            const container = document.getElementById('holidaysList');

            if (holidays.length === 0) {
                container.innerHTML = `
                    <div class="empty-state">
                        <i class="fas fa-calendar-times"></i>
                        <p style="font-size: 18px; margin-top: 15px;">No hay feriados registrados</p>
                        <p>Agrega tu primer feriado usando el formulario de arriba</p>
                    </div>
                `;
                return;
            }

            // Ordenar por fecha
            holidays.sort((a, b) => new Date(a.date) - new Date(b.date));

            let html = '';
            holidays.forEach((holiday, index) => {
                html += `
                    <div class="holiday-card fade-in" style="animation-delay: ${index * 0.05}s;">
                        <div class="holiday-info">
                            <div class="holiday-date">
                                <i class="fas fa-calendar-day me-2" style="color: #667eea;"></i>
                                ${formatDate(holiday.date)}
                            </div>
                            <div class="holiday-name">${holiday.name}</div>
                            <span class="${getBadgeClass(holiday.type)}">${holiday.type.charAt(0).toUpperCase() + holiday.type.slice(1)}</span>
                            ${holiday.description ? `<p style="color: #718096; font-size: 13px; margin-top: 8px; margin-bottom: 0;"><i class="fas fa-info-circle me-1"></i>${holiday.description}</p>` : ''}
                        </div>
                        <div class="holiday-actions">
                            <button class="btn-icon btn-edit" onclick="editHoliday(${index})" title="Editar">
                                <i class="fas fa-edit"></i>
                            </button>
                            <button class="btn-icon btn-delete" onclick="deleteHoliday(${index})" title="Eliminar">
                                <i class="fas fa-trash"></i>
                            </button>
                        </div>
                    </div>
                `;
            });

            container.innerHTML = html;
            updateStats();
        }

        // Función para actualizar estadísticas
        function updateStats() {
            document.getElementById('totalHolidays').textContent = holidays.length;

            const nationalCount = holidays.filter(h => h.type === 'nacional').length;
            document.getElementById('nationalHolidays').textContent = nationalCount;

            document.getElementById('holidayCount').textContent = `${holidays.length} registrados`;

            // Encontrar próximo feriado
            const today = new Date();
            const nextHoliday = holidays.find(h => new Date(h.date + 'T00:00:00') >= today);
            if (nextHoliday) {
                const date = new Date(nextHoliday.date + 'T00:00:00');
                const months = ['Ene', 'Feb', 'Mar', 'Abr', 'May', 'Jun', 'Jul', 'Ago', 'Sep', 'Oct', 'Nov', 'Dic'];
                document.getElementById('nextHoliday').textContent = `${date.getDate()} ${months[date.getMonth()]}`;
            }
        }

        // Función para verificar duplicados
        function checkDuplicate(date, excludeIndex = -1) {
            return holidays.some((h, index) => h.date === date && index !== excludeIndex);
        }

