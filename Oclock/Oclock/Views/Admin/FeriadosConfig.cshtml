        <div class="header">
            <div class="logo">
                <div class="clock-icon"></div>
                O'clock
            </div>
            <div class="user-info">
                <div>
                    <div style="text-align: right; margin-bottom: 4px; font-weight: 600;">Juan Pérez</div>
                    <div style="font-size: 13px; opacity: 0.9;">Administrador</div>
                </div>
                <div class="avatar">JP</div>
            </div>
        </div>

        <!-- Main Layout -->
        <div class="main-layout">
            <!-- Sidebar -->
            <div class="sidebar">
                <div class="menu-item">
                    <a href="/Admin/Admin" class="menu-link">
                        <div class="icon">📊</div>
                        Dashboard
                    </a>
                </div>

                <div class="menu-item">
                    <a href="/Admin/VerMarcas" class="menu-link">
                        <div class="icon">⏰</div>
                        Marcas de Asistencia
                    </a>
                </div>

                <div class="menu-item menu-expandable expanded" onclick="toggleSubmenu(this)">
                    <div class="menu-expandable-header active">
                        <div class="menu-expandable-left">
                            <div class="icon">⚙️</div>
