                    </a>
                </div>

            </div>

            <!-- Main Content -->
            <div class="content">
                <div class="content-header">
                    <h1><i class="fas fa-calendar-alt me-2"></i>Calendario Laboral</h1>
                    <p>Gestión de feriados y días especiales</p>
                </div>

                <!-- Stats Mini Cards -->
                <div class="row mb-4">
                    <div class="col-md-4">
                        <div class="stat-mini fade-in">
                            <div class="stat-mini-value" id="totalHolidays">8</div>
                            <div class="stat-mini-label">Feriados Totales</div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="stat-mini fade-in" style="animation-delay: 0.1s;">
                            <div class="stat-mini-value" id="nationalHolidays">5</div>
                            <div class="stat-mini-label">Feriados Nacionales</div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="stat-mini fade-in" style="animation-delay: 0.2s;">
                            <div class="stat-mini-value" id="nextHoliday">24 Dic</div>
                            <div class="stat-mini-label">Próximo Feriado</div>
                        </div>
                    </div>
                </div>

                <!-- Registrar Feriado -->
