@{
    ViewData["Title"] = "Olvidé la contraseña";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Olvidé la contraseña</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background: linear-gradient(135deg, #667eea, #764ba2);
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            font-family: 'Segoe UI', sans-serif;
            padding: 2rem 0;
        }

        .box {
            background: #fff;
            width: 520px;
            max-width: 95%;
            border-radius: 18px;
            box-shadow: 0 8px 20px rgba(0,0,0,0.3);
            padding: 24px;
        }

        .btn-primary-custom {
            background: linear-gradient(135deg, #667eea, #764ba2);
            border: none;
            border-radius: 12px;
            padding: 0.6rem 1.5rem;
            font-size: 1rem;
            font-weight: 600;
            color: white;
            width: 100%;
        }

        .btn-secondary-custom {
            background: #e2e8f0;
            border: none;
            border-radius: 12px;
            padding: 0.6rem 1.5rem;
            font-size: 0.95rem;
            font-weight: 600;
            color: #4a5568;
            width: 100%;
            text-decoration: none;
            display: inline-block;
            text-align: center;
        }
    </style>
</head>
<body>
    <div class="box">
        <h3 class="mb-2">Olvidé la contraseña</h3>
        <p class="text-muted mb-4">Ingresa tu correo y te enviaremos un código para restablecerla.</p>

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
        }
        else if (ViewBag.ErrorMessage != null)
        {
            <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
        }

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">@TempData["SuccessMessage"]</div>
        }
        else if (ViewBag.SuccessMessage != null)
        {
            <div class="alert alert-success">@ViewBag.SuccessMessage</div>
        }

        <form method="post" action="@Url.Action("ForgotPassword", "Usuario")">
            <div class="mb-3">
                <label class="form-label">Correo electrónico</label>
                <input type="email" name="email" class="form-control" placeholder="usuario@empresa.com" required />
            </div>
            <button type="submit" class="btn-primary-custom">Enviar código</button>
        </form>

        <div class="mt-3">
            <a class="btn-secondary-custom" href="@Url.Action("Index", "Usuario", new { tab = "login" })">Volver al inicio de sesión</a>
        </div>
    </div>
</body>
</html>