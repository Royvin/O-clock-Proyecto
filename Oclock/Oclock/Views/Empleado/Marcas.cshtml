    <script>



        function toggleSubmenu(element) {
            const submenu = element.querySelector('.submenu');
            const header = element.querySelector('.menu-expandable-header');

            // Toggle expanded class
            element.classList.toggle('expanded');

            // Toggle submenu visibility
            submenu.classList.toggle('show');

            // Toggle header active state
            if (element.classList.contains('expanded')) {
                header.classList.add('active');
            } else {
                header.classList.remove('active');
            }
        }

        // =========================
        // Mock Data Storage
        // =========================
        let todayMarks = [];

        // =========================
        // Clock Update
        // =========================
        function updateClock() {
            const now = new Date();

            // Update time
            const hours = String(now.getHours()).padStart(2, '0');
            const minutes = String(now.getMinutes()).padStart(2, '0');
            const seconds = String(now.getSeconds()).padStart(2, '0');
            document.getElementById('currentTime').textContent = `${hours}:${minutes}:${seconds}`;

            // Update date
            const options = { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' };
            const dateStr = now.toLocaleDateString('es-CR', options);
            document.getElementById('currentDate').textContent = dateStr.charAt(0).toUpperCase() + dateStr.slice(1);
        }

        // =========================
        // Register Mark
        // =========================
        function registerMark(type) {
            const now = new Date();
            const timestamp = now.toISOString();
            const time = now.toLocaleTimeString('es-CR', { hour: '2-digit', minute: '2-digit', second: '2-digit' });

            // Get geolocation (simulated)
            const location = "San José, Costa Rica"; // In real app, use navigator.geolocation

            const mark = {
                id: todayMarks.length + 1,
                type: type,
                timestamp: timestamp,
                time: time,
                date: now.toLocaleDateString('es-CR'),
                location: location,
                employeeId: "EMP001",
                employeeName: "María González"
            };

            todayMarks.push(mark);

            // Update UI
            updateStatusSection();
            renderTodayHistory();
            showSuccessModal(mark);

            // Show alert if needed
            checkScheduleAlerts();
        }

        // =========================
        // Update Status Section
        // =========================
        function updateStatusSection() {
            const entradaMark = todayMarks.find(m => m.type === 'entrada');
            const salidaMark = todayMarks.find(m => m.type === 'salida');

            // Update entrance time
            if (entradaMark) {
                document.getElementById('entradaTime').textContent = entradaMark.time.substring(0, 5);
            }

            // Update exit time
            if (salidaMark) {
                document.getElementById('salidaTime').textContent = salidaMark.time.substring(0, 5);
            }

            // Calculate worked time
            if (entradaMark && salidaMark) {
                const entrada = new Date(entradaMark.timestamp);
                const salida = new Date(salidaMark.timestamp);
                const diff = salida - entrada;
                const hours = Math.floor(diff / (1000 * 60 * 60));
                const minutes = Math.floor((diff % (1000 * 60 * 60)) / (1000 * 60));
                document.getElementById('workedTime').textContent = `${hours}h ${minutes}m`;
            }

            // Update current status
            const statusEl = document.getElementById('currentStatus');
            const lastMark = todayMarks[todayMarks.length - 1];

            if (!lastMark) {
                statusEl.innerHTML = '<span class="badge badge-info" style="font-size: 14px;">Sin marcar</span>';
            } else if (lastMark.type === 'entrada') {
                statusEl.innerHTML = '<span class="badge badge-success" style="font-size: 14px;">Trabajando</span>';
            } else if (lastMark.type === 'almuerzo') {
                statusEl.innerHTML = '<span class="badge badge-warning" style="font-size: 14px;">En almuerzo</span>';
            } else if (lastMark.type === 'descanso') {
                statusEl.innerHTML = '<span class="badge badge-info" style="font-size: 14px;">En descanso</span>';
            } else if (lastMark.type === 'salida') {
                statusEl.innerHTML = '<span class="badge badge-danger" style="font-size: 14px;">Fuera de turno</span>';
            }
        }

        // =========================
        // Render Today History
        // =========================
        function renderTodayHistory() {
            const container = document.getElementById('todayHistory');

            if (todayMarks.length === 0) {
                container.innerHTML = `
                    <div class="empty-state">
                        <div class="empty-state-icon">⏰</div>
                        <h3>Sin marcas registradas</h3>
                        <p>Aún no has registrado ninguna marca el día de hoy</p>
                    </div>`;
                return;
            }

            const markIcons = {
                entrada: { icon: '🚪', color: '#c6f6d5', text: '#22543d', label: 'Entrada' },
                salida: { icon: '🏠', color: '#fed7d7', text: '#742a2a', label: 'Salida' },
                almuerzo: { icon: '🍽️', color: '#feebc8', text: '#7c2d12', label: 'Almuerzo' },
                descanso: { icon: '☕', color: '#bee3f8', text: '#2c5282', label: 'Descanso' }
            };

            container.innerHTML = todayMarks.reverse().map(mark => {
                const config = markIcons[mark.type];
                return `
                    <div class="history-item">
                        <div class="history-icon" style="background:${config.color};color:${config.text};">
                            ${config.icon}
                        </div>
                        <div class="history-info">
                            <div class="history-title">${config.label}</div>
                            <div class="history-details">
                                <div class="history-detail-item">🕐 <strong>${mark.time}</strong></div>
                                <div class="history-detail-item">📍 ${mark.location}</div>
                                <div class="history-detail-item">✅ Registrado correctamente</div>
                            </div>
                        </div>
                    </div>
                `;
            }).join('');

            todayMarks.reverse(); // Restore original order
        }

         // =========================
        // Show Success Modal
        // =========================
        function showSuccessModal(mark) {
            const modal = document.getElementById('successModal');
            const details = document.getElementById('modalDetails');

            const markLabels = {
                entrada: 'Entrada',
                salida: 'Salida',
                almuerzo: 'Almuerzo',
                descanso: 'Descanso'
            };

            details.innerHTML = `
                <div class="detail-row">
                    <div class="detail-label">Tipo de Marca</div>
                    <div class="detail-value">${markLabels[mark.type]}</div>
                </div>
                <div class="detail-row">
                    <div class="detail-label">Fecha</div>
                    <div class="detail-value">${mark.date}</div>
                </div>
                <div class="detail-row">
                    <div class="detail-label">Hora</div>
                    <div class="detail-value">${mark.time}</div>
                </div>
                <div class="detail-row">
                    <div class="detail-label">Ubicación</div>
                    <div class="detail-value">${mark.location}</div>
                </div>
                <div class="detail-row">
                    <div class="detail-label">Colaborador</div>
                    <div class="detail-value">${mark.employeeName}</div>
                </div>
            `;

            modal.style.display = 'flex';
        }

        // =========================
        // Close Modal
        // =========================
        function closeModal() {
            const modal = document.getElementById('successModal');
            modal.style.display = 'none';
        }
    </script>
